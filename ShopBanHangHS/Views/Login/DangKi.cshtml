@model ShopBanHangHS.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Lumino - Login</title>
	<link href="~/content/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/content/css/datepicker3.css" rel="stylesheet">
	<link href="~/content/css/styles.css" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<script src="js/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">Đăng Kí Tài Khoản</div>
				<div class="panel-body">
					
					

						@Html.AntiForgeryToken()
						@Html.ValidationSummary(true,"",new {@class = "text-danger"})
						<div class="card-text">
							<form action="DangKi" method="post">
								<fieldset>
									<div class="form-group">
										<input class="form-control" placeholder="Tên Khách Hàng" name="ten" type="text" autofocus="">
										@Html.ValidationMessageFor(m=>m.ten,"",htmlAttributes:new { @class = "text-danger" })
									</div>
									<div class="form-group">
										<input class="form-control" placeholder="E-mail" name="email" type="text" autofocus="">
										@Html.ValidationMessageFor(m=>m.Email,"",htmlAttributes:new { @class = "text-danger" })
									</div>
									<div class="form-group">
										<input class="form-control" placeholder="Password" name="password" type="password" value="">
										@Html.ValidationMessageFor(m=>m.matKhau,"",htmlAttributes:new { @class = "text-danger" })
									</div>
								
									<div class="form-group">
										<input class="form-control" placeholder="Địa Chỉ " name="diaChi" type="text" autofocus="">
										@Html.ValidationMessageFor(m=>m.diaChi,"",htmlAttributes:new { @class = "text-danger" })
									</div>
									<div class="form-group">
										<input class="form-control" placeholder="Số Điện Thoại" name="sdt" type="text" autofocus="">
										@Html.ValidationMessageFor(m=>m.soDT,"",htmlAttributes:new { @class = "text-danger" })
									</div>
									
									
									<button type="submit" class="btn btn-primary btn-block"> Đăng Kí </button>
								<h2><span style="color:green">@ViewBag.Mess</span></h2>
									<div class="sign-up">
										 <a href="~/Login/Index"> Trở Về Đăng Nhập </a>
									</div>
								
								</fieldset>
							</form>
						</div>
					
				</div>
			</div>
		</div><!-- /.col-->
	</div><!-- /.row -->


	<script src="~/content/js/jquery-1.11.1.min.js"></script>
	<script src="~/content/js/bootstrap.min.js"></script>
</body>
</html>
