@model IEnumerable<ShopBanHangHS.Areas.Admin.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="color:green">Quản Lí Tài Khoản</h2>

<p class="btn-danger">
    <a href="/Admin/TaiKhoanAdmin/Create">Thêm Mới Tài Khoản</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.matKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quyen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.xacThucEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivationCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.xacThucEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivationCode)
            </td>
            <td class="btn-group">
                    <a class="btn btn-secondary" asp-action="Edit" asp-controller="TaiKhoanAdmin" asp-route-id="@item.maTaiKhoan">Edit</a> |
                    <a class="btn btn-secondary" asp-action="Detail" asp-controller="TaiKhoanAdmin" asp-route-id="@item.maTaiKhoan">Details</a> |
                    <a class="btn btn-secondary" asp-action="Delete" asp-controller="TaiKhoanAdmin" asp-route-id="@item.maTaiKhoan">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
